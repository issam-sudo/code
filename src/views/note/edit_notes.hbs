<h1>Edit</h1>

<form action="/notes/edit/{{NoteEdit.id}}?_method=PUT" method="POST">

    <input type="hidden" name="_method" value="PUT">
  <div class="form-group">
    <input type="title" class="form-control" id="title" name="title" value="{{NoteEdit.title}}">
  </div>
  <div class="form-group">
    <input type="description" class="form-control" id="description"  name="description" value="{{NoteEdit.description}}">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>